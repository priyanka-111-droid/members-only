<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>MembersOnly</h1>
    <div class="sign-up">
      <h2><%= title %></h2>
      <% if (locals.errors) { %>
        <div class="errors">
        <%for (const err of errors){ %>
            <p class="error"><%=err.msg%></p>
          <%}%>
        </div>
        <%}%>
      <form action="" method="POST" id="sign-up">
        <label for="first_name">First Name:</label>
          <input type="text" id="first_name" name="first_name" required value="<%=locals.user === undefined ? '' : locals.user.first_name%>">
        <label for="last_name">Last Name:</label>
          <input type="text" id="last_name" name="last_name" required value="<%=locals.user === undefined ? '' : locals.user.last_name%>">
        <label for="email">Email:</label>
          <input type="email" id="email" name="email" required value="<%=locals.user === undefined ? '' : locals.user.email%>">
        <label for="password">Password:</label>
          <input type="password" id="password" name="password" required minlength="6">
      </form>
      <button type="submit" form="sign-up">Sign Up</button>
    </div>
  </body>
</html>
